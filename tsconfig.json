{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2016",
    "lib": ["es2016", "es2019", "es2020.promise", "dom", "dom.iterable"],
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types", "@types"],
    "types": ["node", "jest", "console"],
    "paths": {
      "@kubevirt-types": ["src/@kubevirt-internal/types"],
      "@kubevirt-types/*": ["src/types/*", "src/@kubevirt-internal/types/*"],
      "@kubevirt-models": ["src/@kubevirt-internal/models"],
      "@kubevirt-models/*": ["src/models/*", "src/@kubevirt-internal/models/*"],
      "@kubevirt-internal": ["src/@kubevirt-internal"],
      "@kubevirt-internal/*": ["src/@kubevirt-internal/*"],
      "@kubevirt-components": ["src/@kubevirt-internal/components"],
      "@kubevirt-components/*": ["src/components/*", "src/@kubevirt-internal/components/*"],
      "@kubevirt-utils": ["src/@kubevirt-internal/utils"],
      "@kubevirt-utils/*": ["src/utils/*", "src/@kubevirt-internal/utils/*"],
      "@kubevirt-constants": ["src/@kubevirt-internal/constants"],
      "@kubevirt-constants/*": ["src/constants/*", "src/@kubevirt-internal/constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/node_modules", "**/dist"]
}
